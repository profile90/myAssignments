#include <iostream>

int a, d = 0;
int ref[50];



 
int main()
{
 start: 
     std::cout << "Enter the largest stack, it can be no larger than 50: ";
     std::cin >> a;

  if(a > 101)
  {
    std::cout << "Try again, the number is too big\n";
      goto start;
  }

  for(int input = 0; input < a; input++)
  {
      d = ((input * input)+input) / 2;
      ref[input] = d;
  }
int counter = 0;
  
    for(int h = 0; h < 2550; h++)
    {
      
      

    	if(ref[counter] == 0 && h > 10)
	  break;

	if(h == ref[counter])
	  {
	    std::cout << "\n";
	    counter++;
	    
	  
	std::cout << "*";

    }

    return 0;
}
