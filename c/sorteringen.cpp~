
#include <iostream>
#include <cstdlib>
#include <iomanip>
using std::endl, std::cin, std::cout;

int main()
{
    int tal = 6578;
    int *ptal;
    ptal = &tal;
    cout << &tal << "    " << tal <<endl;
    cout << ptal << "    " << *ptal <<endl;
    tal = tal++;
    cout << ptal << "    " << *ptal <<endl;
    ptal = new int[10];
    for( int i = 0;i < 10; i++)
        ptal[i] = i+10;
    for( int i = 0;i < 10; i++)
        cout << ptal[i] << endl;
    delete ptal;
    ptal = &tal;
     for( int i = 0;i < 10; i++)
        cout << &ptal[i] << endl;
    const char *ptext = "This is a HGHGHG";
    cout << ptext << endl;
    return 0;
}

